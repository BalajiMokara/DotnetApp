@model WebApplication1.Models.deletecus

@{
    ViewBag.Title = "Delete Customer";
}

@{
    <script type="text/javascript">
    function DeleteItem()
    {
        if (confirm("Are You Sure want to delete?"))
        {
            return true;

        }
        return false;
    }



    </script>}
    @{
        if ((Convert.ToInt32(ViewData["result"]) != 0) && (ViewData["result"]) != null)
        {
            ViewData["result"] = null;
            <script type="text/javascript" language="javascript">
            alert("Customer deleted successfully");
            </script>
        }
    }

    <h3 style="text-align:center">Delete Existing Customer</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @*<h4>deletecus</h4>*@<h4></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.cusID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cusID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cusID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-default" onclick="return DeleteItem()" />
                </div>
            </div>
        </div>
    }

<div>
    @Html.ActionLink("Back", "executive","homepage")
</div>




    
